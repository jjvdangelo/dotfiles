[user]
	email = jjvd@hey.com
	name = Jim D'Angelo
	signingkey = 9ED809B384362C8E

[core]
	editor = nvim
	autocrlf = input

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[push]
	default = current

[init]
	defaultBranch = master

[merge]
    tool = nvimdiff
    conflictstyle = diff3

[mergetool]
    prompt = false

[mergetool "nvimdiff"]
    cmd = nvim -d "$LOCAL" "$BASE" "$REMOTE" "$MERGE" \
            -c 'wincmd J'
    trustExitCode = true
    keepBackup    = false
[commit]
	gpgsign = true
[tag]
	gpgSign = true
[fetch]
	prune = true

[includeIf "gitdir/i:C:/"]
	path = ~/.config/git/config-windows
