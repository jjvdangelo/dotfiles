[user]
	email = jjvd@hey.com
	name = Jim D'Angelo

[core]
	editor = nvim

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[push]
	default = current

[init]
	defaultBranch = master

[merge]
    tool = nvimdiff
    conflictstyle = diff3

[mergetool]
    prompt = false

[mergetool "nvimdiff"]
    cmd = nvim -d "$LOCAL" "$BASE" "$REMOTE" "$MERGE" \
            -c 'wincmd J'
    trustExitCode = true
    keepBackup    = false
